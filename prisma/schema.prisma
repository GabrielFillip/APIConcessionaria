generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dealership {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  contact   String
  customers Customer[]
  vehicles  Vehicle[]
  createdAt DateTime @default(now())
}

model Customer {
  id            Int      @id @default(autoincrement())
  name          String
  contact       String
  dealershipId  Int
  dealership    Dealership @relation(fields: [dealershipId], references: [id])
  createdAt     DateTime @default(now())
}

model Vehicle {
  id            Int      @id @default(autoincrement())
  brand         String
  model         String
  year          Int
  chassis       String   @unique
  color         String
  fuel          String
  dealershipId  Int
  dealership    Dealership @relation(fields: [dealershipId], references: [id])
  createdAt     DateTime @default(now())
}
